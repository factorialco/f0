{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "checkJs": false,
    "types": ["vite/client", "@testing-library/jest-dom", "vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    }
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/__tests__/**/*.ts",
    "src/**/__tests__/**/*.tsx",
    "vitest.setup.ts",
    "vite/vitest.setup.ts"
  ]
}
