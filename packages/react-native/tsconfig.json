{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["DOM", "ESNext"],
    "noEmit": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-native",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@factorialco/f0-core/*": ["../core/src/*"],
      "lib/*": ["./lib/*"],
      "ui/*": ["./ui/*"],
      "src/*": ["./src/*"]
    },
    "types": ["nativewind/types", "jest"]
  },
  "include": [
    "src",
    "app",
    "lib",
    "ui",
    "nativewind-env.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    ".storybook"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.*",
    "**/*.spec.*",
    "**/__tests__/**",
    "**/__snapshots__/**",
    ".storybook/storybook.requires.ts"
  ],
  "extends": "expo/tsconfig.base"
}
