{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-native",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@factorialco/f0-core": ["../core/src"]
    },
    "types": ["nativewind/types", "jest"]
  },
  "include": ["src", "nativewind-env.d.ts"],
  "exclude": ["node_modules", "dist"]
}
